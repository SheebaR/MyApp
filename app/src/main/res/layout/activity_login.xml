<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imm"
    tools:context=".LoginActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ಲಾಗಿನ್"
        android:layout_marginTop="60dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#1f8112"
        />
    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ಖಾತೆ ಐಡಿ"
        android:layout_below="@+id/login1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edusrname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ಖಾತೆ ಐಡಿ ನಮೂದಿಸಿ"
        android:inputType="textEmailAddress"
        android:layout_below="@id/hint"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        />
    <TextView
        android:id="@+id/hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ಪಾಸ್‌ವರ್ಡ್"
        android:layout_below="@+id/edusrname1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edpwdname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ಪಾಸ್‌ವರ್ಡ್ ನಮೂದಿಸಿ"
        android:inputType="textPassword"
        android:layout_below="@id/hint2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="45dp"
        />
    <LinearLayout
        android:id="@+id/lin_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edpwdname1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:weightSum="10">

        <CheckBox
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/hint3"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="ನೆನಪಿಡಿ"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/buttonSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="ಲಾಗಿನ್"
            android:backgroundTint="#96808080"
            android:textColorHint="#ffffff"
            android:textSize="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_lay2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_lay1"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        >
        <Button
            android:id="@+id/sign_up"
            android:backgroundTint="#45cbd1cb"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:text="ಖಾತೆಯನ್ನು ಹೊಂದಿಲ್ಲವೇ? ಇಲ್ಲಿ ಸೈನ್ ಅಪ್ ಮಾಡಿ"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>